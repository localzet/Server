{
  "name": "localzet/server",
  "description": "Localzet Server - Асинхронный event-based сервер на PHP.",
  "type": "library",
  "keywords": [
    "localzet"
  ],
  "license": "AGPL-3.0-or-later",
  "authors": [
    {
      "name": "Ivan Zorin",
      "email": "creator@localzet.com",
      "homepage": "https://www.localzet.com",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "support@localzet.com",
    "source": "https://github.com/localzet/server"
  },
  "funding": [
    {
      "type": "other",
      "url": "https://www.tinkoff.ru/cf/Ad5MBNhodod"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-json": "*",
    "ext-posix": "*",
    "ext-pcntl": "*",
    "ext-sockets": "*",
    "revolt/event-loop": "^1.0"
  },
  "require-dev": {
    "pestphp/pest": "2.x-dev",
    "mockery/mockery": "2.0.x-dev"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "suggest": {
    "ext-ev": "For better performance",
    "ext-uv": "For better performance",
    "ext-event": "For better performance",
    "ext-redis": "For better performance"
  },
  "autoload": {
    "psr-4": {
      "localzet\\Server\\": "src/"
    }
  }
}